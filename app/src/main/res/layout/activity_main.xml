<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    android:visibility="visible"
    tools:context="com.example.victormanuel.gymsena.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Gimnasio Sena"
            android:textColor="#fff"
            android:textSize="32dp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="42dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="¡Bienvenido!"
            android:textColor="#fff"
            android:textSize="22dp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="115dp" />

        <EditText
            android:id="@+id/txtUsu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="textPersonName"
             />

        <EditText
            android:id="@+id/txtPas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:hint="Documento"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff" />


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="9dp"
            android:text="recordar mi contraseña"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnLogin"
            android:text="Continuar"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@drawable/borde_redondo"

            android:textColor="#fff"
           />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="¿Olvido su clave?"
            android:textColor="#fff"
            android:textSize="12dp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="42dp" />

        <TextView
            android:id="@+id/txtVentanaInicioRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:onClick="ventanaRegistro"
            android:text="Registrarse"
            android:textColor="#fff"
            android:textSize="12dp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="42dp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
